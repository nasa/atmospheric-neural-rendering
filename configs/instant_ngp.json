{
    "dataset": {
        "type": "HARP2",
        "max_abs_view_angle": 45.0,
        "ray_origin_height": 20000,
        "bands_to_keep": [0, 1, 2, 3]
    },
    "pipeline": {
        "type": "InstantNGP",
        "include_height": false,
        "point_preprocessor": "horizontal",
        "num_bands": 4,
        "multi_band_extinction": false,
        "num_samples_per_ray": 192,
        "alt_compress_factor": 32,
        "loss": "l1_plus_hdr",
        "instant_ngp": {
            "ema_decay": null,
            "encoding": {
                "otype": "HashGrid",
                "n_levels": 16,
                "n_features_per_level": 2,
                "log2_hashmap_size": 19,
                "base_resolution": 16,
                "per_level_scale": 1.3819
            },
            "network": {
                "otype": "FullyFusedMLP",
                "activation": "ReLU",
                "output_activation": "None",
                "n_neurons": 32,
                "n_hidden_layers": 1
            },
            "dir_encoding": {
                "otype": "Composite",
                "nested": [
                    {
                        "n_dims_to_encode": 3,
                        "otype": "SphericalHarmonics",
                        "degree": 2
                    },
                    {
                        "otype": "Identity"
                    }
                ]
            },
            "rgb_network": {
                "otype": "FullyFusedMLP",
                "activation": "ReLU",
                "output_activation": "None",
                "n_neurons": 32,
                "n_hidden_layers": 2
            },
            "surface_encoding": {
                "otype": "Composite",
                "nested": [
                    {
                        "n_dims_to_encode": 2,
                        "otype": "HashGrid",
                        "n_levels": 6,
                        "n_features_per_level": 2,
                        "log2_hashmap_size": 16,
                        "base_resolution": 64,
                        "per_level_scale": 2
                    },
                    {
                        "n_dims_to_encode": 3,
                        "otype": "SphericalHarmonics",
                        "degree": 2
                    }
                ]
            },
            "surface_network": {
                "otype": "FullyFusedMLP",
                "activation": "ReLU",
                "output_activation": "None",
                "n_neurons": 32,
                "n_hidden_layers": 2
            }
        }
    },
    "trainer": {
        "all_gpu": true,
        "num_workers": 0,
        "batch_size": 32768,
        "num_iters": 5e3,
        "print_frequency": 10,
        "optimizer": {
            "lr": 1e-2,
            "betas": [
                0.9,
                0.99
            ],
            "eps": 1e-15,
            "weight_decay": 1e-2
        },
        "scheduler": {
            "type": "fixed",
            "gamma": 0.33,
            "decay_start": 1000,
            "decay_interval": 500
        }
    }
}